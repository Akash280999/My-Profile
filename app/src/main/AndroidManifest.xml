<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.myprofile">

    <application
            android:allowBackup="true"
            android:icon="@drawable/main_icon"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        <activity android:name=".SplashActivity"
                  android:theme = "@style/AppTheme.NoActionBar"
                  android:screenOrientation = "portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".PersonalDetails"
                  android:screenOrientation = "portrait"
                  android:label="Personal Details">
        </activity>
        <activity android:name=".LanguageProficiency"
                  android:screenOrientation = "portrait"
                  android:label="Language Proficiency">
        </activity>
        <activity android:name=".Skills"
                  android:screenOrientation = "portrait"
                  android:label="Skills">
        </activity>
        <activity android:name=".ExtraCurricularActivities"
                  android:screenOrientation = "portrait"
                  android:label="Extra Curricular Activities">
        </activity>
        <activity android:name=".PositionOfResponsibility"
                  android:screenOrientation = "portrait"
                  android:label="Position Of Responsibility">
        </activity>
        <activity android:name=".Trainings"
                  android:screenOrientation = "portrait"
                  android:label="Trainings">
        </activity>
        <activity android:name=".Projects"
                  android:screenOrientation = "portrait"
                  android:label="Projects">
        </activity>
        <activity
                android:name=".AcademicQualification"
                android:screenOrientation = "portrait"
                android:label="Academic Qualification">
        </activity>
        <activity
                android:name=".MyPhoto"
                android:screenOrientation = "portrait"
                android:label="My Profile Photo">
        </activity>
        <activity
                android:name=".MainActivity"
                android:screenOrientation = "portrait"
                android:label="My Profile">
        </activity>
    </application>

</manifest>